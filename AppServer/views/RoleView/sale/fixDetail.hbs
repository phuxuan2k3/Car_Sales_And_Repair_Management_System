<div class="container-fluid">
    {{!-- //todo: change nav --}}
    {{> Nav/saleNav}}
    <div class="row">
        <div class="col-3 tabs">
            <div class="nav flex-column nav-pills me-3" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                <div class="card w-100 border border-0" style="height: 600px;">
                    <div class="card-body" style="height: 100%;">
                        <button id="dashboard" class="w-100 text-start nav-link mb-1" data-bs-toggle="pill"
                            data-bs-target="#v-pills-dashboard" type="button" role="tab"
                            aria-controls="v-pills-dashboard" aria-selected="true"><i
                                class="fa-solid fa-house me-2"></i> Dashboard</button>
                        <button id="report" class="w-100 text-start nav-link mb-1" data-bs-toggle="pill"
                            data-bs-target="#v-pills-document" type="button" role="tab" aria-controls="v-pills-document"
                            aria-selected="false"><i class="fa-regular fa-file-lines me-3"></i>Report</button>
                        <button id="sale-invoices" class="w-100 text-start nav-link mb-1" data-bs-toggle="pill"
                            data-bs-target="#v-pills-document" type="button" role="tab" aria-controls="v-pills-document"
                            aria-selected="false"><i class="fa-solid fa-file-invoice-dollar me-3"></i>Sale Invoices</button>
                        <button id="fix-invoices" class="w-100 text-start nav-link mb-1 active" data-bs-toggle="pill"
                            data-bs-target="#v-pills-document" type="button" role="tab" aria-controls="v-pills-document"
                            aria-selected="false"><i class="fa-solid fa-file-invoice me-3"></i>Fix Invoices</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-9 tab_content" style="height: 600px;">
            <div class="card-body p-3 bg-white d-flex flex-column justify-content-between" id="mainContent"
                style="height: 100%;">
                <div class="row">
                    <div class="hstack"><a href="/outputFixInvoice?invoiceId={{invoiceId}}"
                            class="ms-auto btn btn-info col-3"> <i class="fa-solid fa-file-invoice"
                                style="color: #7e1811;">Export
                                Invoice</i></a></div>


                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Auto Part</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Mechanic</th>

                            </tr>
                        </thead>
                        <tbody>
                            {{#each details}}
                            <tr>
                                <td>{{this.name}}</td>
                                <td>{{this.quantity}}</td>
                                <td>{{this.lastname}} {{this.firstname}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <ul class="pagination justify-content-center col-12">
                    <li class="page-item {{#orCompare pageState 'min' 'only'}} disabled {{/orCompare}}">
                        <a class="page-link"
                            href="/fixDetail?invoiceId={{invoiceId}}&page={{#subtract page 1}}{{/subtract}}">Previous</a>
                    </li>
                    {{#each pagination}}
                    <li class="page-item {{#when ../page 'eq' this}} active {{/when}}"><a class="page-link"
                            href="/fixDetail?invoiceId={{../invoiceId}}&page={{this}}">{{this}}</a></li>
                    {{/each}}
                    <li class="page-item {{#orCompare pageState 'max' 'only'}} disabled {{/orCompare}}">
                        <a class="page-link"
                            href="/fixDetail?invoiceId={{invoiceId}}&page={{#addInt page 1}}{{/addInt}}">Next</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
</div>