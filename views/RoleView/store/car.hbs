<div class="container-fluid">
    {{> Nav/storeNav}}
    <div class="row">
        <div class="col-3 tabs">
            <div class="nav flex-column nav-pills vh-100 me-3" id="v-pills-tab" role="tablist"
                aria-orientation="vertical">
                <div class="card w-100 h-100 border border-0">
                    <div class="card-body">
                        <button id="dashboard" class="w-100 text-start nav-link active mb-1" data-bs-toggle="pill"
                            data-bs-target="#v-pills-dashboard" type="button" role="tab"
                            aria-controls="v-pills-dashboard" aria-selected="true"><i
                                class="fa-solid fa-house me-2"></i> <a style="all:unset" href="/">Dashboard</a></button>
                        <button id="car" class="w-100 text-start nav-link mb-1" data-bs-toggle="pill"
                            data-bs-target="#v-pills-document" type="button" role="tab" aria-controls="v-pills-document"
                            aria-selected="false"><i class="fa-regular fa-file-lines me-2"></i><a style="all:unset"
                                href="/car">Cars</a></button>
                        <button id="ap" class="w-100 text-start nav-link mb-1" data-bs-toggle="pill"
                            data-bs-target="#v-pills-document" type="button" role="tab" aria-controls="v-pills-document"
                            aria-selected="false"><i class="fa-regular fa-file-lines me-2"></i><a style="all:unset"
                                href="/ap">Auto
                                Parts</a></button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-9 tab_content">
            <div class="card-body p-3 bg-white">
                <div class="hstack mb-3">
                    <a href="car/insert" type="button" class="ms-auto btn mr-md-2 mb-md-0 mb-2"
                        style=" color:white; background-color: #f0134d;">
                        <i class="fa-solid fa-plus"></i> Add a new Car
                    </a>
                </div>
                {{#each cars}}
                <div class="job-box d-md-flex align-items-center justify-content-between mb-30">
                    <div class="job-left my-4 d-md-flex align-items-center flex-wrap">
                        <div class="img-holder mr-md-4 mb-md-0 mb-4 mx-auto mx-md-0 d-md-none d-lg-flex">
                            {{this.quantity}}
                        </div>
                        <div class="job-content">
                            <h5 class="text-center text-md-left">{{this.car_name}}</h5>
                            <ul class="d-md-flex flex-wrap text-capitalize ff-open-sans">
                                <li class="mr-md-4 ms-5">
                                    <i class="zmdi zmdi-car-wash"></i>{{this.brand}}
                                </li>
                                <li class="mr-md-4 ms-5">
                                    <i class="zmdi zmdi-money mr-2"></i>{{this.price}}
                                </li>
                                <li class="mr-md-4 ms-5">
                                    <i class="zmdi zmdi-drink"></i> {{this.type}}
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-1">
                        <div class="job-right my-4 flex-shrink-0 ">
                            <a href="/car/edit/{{this.id}}"
                                class="btn d-block w-100 d-sm-inline-block btn-light edit"><i
                                    class="fa-solid fa-pen-to-square" style="color: #0b488e;"></i></a>
                        </div>
                        <div class="job-right my-4 flex-shrink-0 ">
                            <a href="#" class="btn d-block w-100 d-sm-inline-block btn-light delete"
                                data-index={{this.id}}><i class="fa-solid fa-trash" style="color: #7e1811;"
                                    data-index={{this.id}}></i></a>
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
    </div>
</div>
</div>
</div>
</div>
</div>